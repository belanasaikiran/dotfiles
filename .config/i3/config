# we are using bumblebee-status, refer the below link to install and setup:
# https://github.com/tobi-wan-kenobi/bumblebee-status

bar {
	status_command /home/saikiran/.local/bin/bumblebee-status \
		-m  nic cpu memory pasink pasource brightness battery time dunstctl \
                -p time.format="%H:%M" memory.format={used} nic.format={ip},{ssid} indicator.format=%NumLock\
		-t nord-powerline
    colors {
        background #434c5e
        statusline #ffffff
        separator #ffffff
			   			   #BORDER #BG	   #TEXT
        focused_workspace  #434c5e #d8dee9 #434c5e
        active_workspace   #434c5e #d8dee9 #000000
        inactive_workspace #434c53 #434c5e #d8dee9
        urgent_workspace   #2f343a #bf616a #d8dee9
        binding_mode       #2f343a #bf616a #d8dee9
    }
	position top
}


