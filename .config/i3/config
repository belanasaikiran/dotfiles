# set colors from .Xresources with fallback
set_from_resource $blue       color7  #01303F
set_from_resource $black      color0  #000000
set_from_resource $yellow     color8  #f5ff22
set_from_resource $white      color21 #ffffff
set_from_resource $red        color1  #bf616a
set_from_resource $cyan       color4  #2e8eae

# set window colors     border  backgr. text    indicator   child_border
client.focused          $white  $blue  $white   $yellow      $yellow
client.focused_inactive $black  $blue   $white  $white      $blue
client.unfocused        $black  $black  $white  $white      $blue
client.urgent           $red    $white  $red    $red        $red
client.placeholder      $white  $black  $yellow $white      $black
client.background       $cyan




