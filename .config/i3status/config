# just to display my name:
disk "/" {

        format =  "  Saikiran Belana "
}



# Original 
#disk "/" {
#        format = "  %avail "
#        prefix_type = custom
#}

disk "/home" {
        format = "  %avail "
        prefix_type = custom
}

run_watch DHCP {
        pidfile = "/var/run/dhclient*.pid"
}

run_watch VPN {
        pidfile = "/var/run/vpnc/pid"
}

# You need to add wifi device name here:
# Example wlan0 or wlp0s20f3
wireless wlp0s20f3{
        #format_up = "  (%quality at %essid, %bitrate)"
        format_up = "   %quality - %essid "

        format_down = "睊 down"
}




ethernet eth0{
        # if you use %speed, i3status requires root privileges
        format_up = "  %ip "
        format_down = "  "
}


	battery all {
        format = " %status %percentage "
        integer_battery_capacity = true
        threshold_type = "percentage"
        low_threshold = "15"
        # f58e nf-mdi-battery_plus; f58b nf-mdi-battery_minus; f578 nf-mdi-battery
        status_chr = " CHR"
        status_bat = " BAT"
        status_full = " FULL"
}

cpu_temperature 0 {
        format = "  %degrees °C "
        max_threshold = 42
        path = "/sys/devices/platform/coretemp.0/hwmon/hwmon3/temp1_input"
}

cpu_usage {
        format = "  %usage "
}

load {
        format = "  %1min "
        max_threshold = 5
}

tztime localdate {
        format = "  %Y-%m-%d "
}

tztime localtime {
# f150 mdi-clock
        format = "  %H:%M "
}

	volume master {
        # fa7d, nf-mdi-volume_high
        format = " 墳 %volume "
        # fc5d, nf-mdi-volume_mute
        #format_muted = "ﱝ %volume" ??? gets reversed
        format_muted = "  %volume "
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}



	memory {
        # f85a, nf-mdi-memory
        format = "  %available "
        threshold_degraded = "6G"
        threshold_critical = "4G"
}
